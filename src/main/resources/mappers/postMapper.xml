<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.lytear.memo.post.dao.PostDAO">
	<insert id="insertPost" parameterType="map" >
		INSERT INTO `post`
		(
			`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		
		)
		VALUES
		(
			#{userId}
			,#{subject}
			,#{content}
			,#{imagePath}
			,now()
			,now()
		
		)
	</insert>
	
	<select id="selectMemoList" resultType="com.lytear.memo.post.model.Post"
	parameterType="int">
		SELECT
			
			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		
		FROM
			`post`
	 	WHERE `userId` = #{userId } 
	
		ORDER BY `id` DESC
	
	</select>
	<select id="selectMemo" resultType="com.lytear.memo.post.model.Post"
	parameterType="map">
		SELECT
			
			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		
		FROM
			`post`
	 	WHERE `id` = #{id } 
			AND `userId`= #{userId}
		
	
	</select>
	
	<delete id="deleteMemo" parameterType="int">
		DELETE 
		FROM
			`post`
		WHERE
			`id` = #{id}	
			AND `userId`= #{userId}
	</delete>
	
	
	<update id="updateMemo" parameterType="map">
		UPDATE 
			`post`
		POST
			`subject`= #{subject}
			, `content`= #{content}
		WHERE
			`id` = #{id}	
			AND `userId`= #{userId}
	</update>
	
	
	
</mapper>